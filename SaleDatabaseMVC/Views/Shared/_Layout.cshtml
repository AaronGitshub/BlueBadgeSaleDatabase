
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        @ViewBag.Title -
        Indiana Sales Database
    </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <div class="container col-md-3  col-md-offset-0">
        <div class="row">
            <div class="col-sm">

                @if (User.Identity.IsAuthenticated)
                {
                    @Html.Partial("_LoginPartial", new { @class = "mainlink" })
                    <br />
                    @Html.ActionLink("Sales", "Index", "Sale", new { area = "" }, new { @class = "mainlink" })
                    @Html.ActionLink("Companies", "Index", "Company", new { area = "" }, new { @class = "mainlink" })
               
                }
                @if (!User.Identity.IsAuthenticated)
                {

                    <a href="~/Account/Login" class="mainlink"><span>Login</span></a><br />
                    <a href="~/Account/Register" class="mainlink"><span>Register</span></a>
                    <br />
                }
            </div>
        </div>
    </div>

    <div class="container col-sm-push-10" style="margin-right: 40px;">
        <br />
        @RenderBody()

    </div>

    @*Background Image*@
    <div class="container-fluid">
        <img src="~/assets/BackgroundNightSky.jpg" class="bg" />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

        <footer class="footer"></footer>
    @*<p>&copy; @DateTime.Now.Year - Indiana Sales Database</p>*@
</body>
</html>




